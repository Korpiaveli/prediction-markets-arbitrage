{
  "name": "arbitrage-scanner",
  "version": "1.0.0",
  "description": "Modular cross-exchange arbitrage detection system",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build -w @arb/math -w @arb/core -w @arb/exchanges -w @arb/storage -w @arb/scanner -w @arb/ml -w @arb/realtime -w @arb/api",
    "build:apps": "npm run build -w @arb/cli -w @arb/app-api -w @arb/app-web",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run test --workspaces",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "dev": "npm run dev --workspace=apps/cli",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "npm run start --workspace=apps/api",
    "clean": "npm run clean --workspaces --if-present",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
